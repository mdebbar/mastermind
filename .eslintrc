{
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "impliedStrict": true,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    },
  },
  "plugins": [
    "react"
  ],
  "settings": {
    "react": {
      "pragma": "React",
      "version": "15.1.0"
    }
  },
  "rules": {
    "comma-dangle": [1, "always-multiline"],
    "semi": [1, "never"],
    "no-console": "warn",

    "react/display-name": 0,
    "react/jsx-key": 2,
    "react/jsx-no-bind": [1, {
      "allowArrowFunctions": true
    }],
    "react/no-danger": 1,
    "react/prop-types": 0
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  }
}
